<div id="edit-interface">
    <div id="group-name-container">
        <div class="group-name-box">
        	<b class="group-name">[Název poznávačky]</b>
        	<button title="Přejmenovat poznávačku" class="rename-group actionButton">
            	<img src='images/pencil.svg'/>
        	</button>
        </div>
        <div class="group-name-input-box" style="display:none;">
        	<input type="text" maxlength="31" class="group-name-input" value="[Název poznávačky]"/>
        	<button class="rename-group-confirm actionButton">
        		<img src='images/tick.svg'/>
        	</button>
        </div>
    </div>
    <div id="parts-boxes-container">
        <div class="part-box" style="border:1px solid black">
            <button title="Odebrat část" class="remove-part actionButton">
            	<img src='images/cross.svg'/>
            </button>
            <div class="part-name-box">
                <b class="part-name">Název části</b>
                <button title="Přejmenovat část" class="rename-part actionButton">
                	<img src='images/pencil.svg'/>
            	</button>
        	</div>
            <div class="part-name-input-box" style="display:none;">
            	<input type="text" maxlength="31" class="part-name-input"/>
            	<button class="rename-part-confirm actionButton">
            		<img src='images/tick.svg'/>
        		</button>
            </div>
            <label>Přírodnina k přidání</label>
            <input type="text" />
            <ul class="naturals-in-part">
                <!-- Zde budou řádky s názvy přidaných přírodnin -->
                <li>
                	<span>Vrbovka úzkolistá</span>
                    <button title="Odebrat" class="remove-natural actionButton">
                    	<img src='images/cross.svg'/>
                    </button>
                </li>
            </ul>
        </div>
        <!-- Sem se budou přidávat další části (div s třídou "part-box") -->
    </div>
    <button id="add-part-button" class="actionButton">
    	<img src='images/plus.svg'/>
    </button>
    <button id="submit">Uložit</button>
</div>