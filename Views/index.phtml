			<h2>Zaregistrujte se</h2>
			<form method="POST" action="index-forms">
				<div class="user-data">
					<input id='register-hidden' type='hidden' name='type' value='r'>
					<label for="register-name">Jméno</label>
					<input id='register-name' type='text' name='registerName' maxlength=15 placeholder='Jméno' value='<?= $registerName ?>' required=true>
