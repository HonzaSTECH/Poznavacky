					<input id='register-pass' type='password' name='registerPass' maxlength=31 placeholder='Heslo' value='<?= $registerPass ?>' required=true> 				    	
					<label for="register-repass">Heslo znovu</label>
					<input id='register-repass' type='password' name='registerRepass' maxlength=31 placeholder='Heslo znovu' value='<?= $registerRepass ?>' required=true>
					<label for="register-email">E-mail</label>
					<input id='register-email' type='email' name='registerEmail' maxlength=255 value='<?= $registerEmail ?>' placeholder='E-mail (nepovinné)'>
