		<div id="login" class="hidden">
			<h2>Přihlašte se</h2>
			<form method="POST" action="index-forms">
				<div class="user-data">
					<input id='login-hidden' type='hidden' name='type' value='l'>
					<label for='login-name'>Jméno</label>
					<div class="pseudo-container"><input id='login-name' type='text' name='loginName' maxlength=15 placeholder='Jméno' value='<?= $loginName ?>'></div>
					<label for='login-pass'>Heslo</label>
					<div class="pseudo-container"><input id='login-pass' type='password' name='loginPass' maxlength=31 placeholder='Heslo'></div>
				</div>
				<div class="checkbox">
				<input type="checkbox" name='stay_logged'/>
				<label for="login_keep">Zůstat přihlášen</label>
				<button id='login-submit' onclick='login()'>Přihlásit se</button>
